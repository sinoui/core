{
  "name": "@sinoui/core",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "umd:main": "dist/sinoui-core.umd.production.js",
  "module": "dist/sinoui-core.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "ts-lib-tools watch",
    "test": "ts-lib-tools test",
    "build": "ts-lib-tools build",
    "format": "ts-lib-tools format",
    "lint": "ts-lib-tools lint",
    "prepublishOnly": "ts-lib-tools build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-tools test",
      "eslint --fix --color",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "styled-components": ">=4.0.0"
  },
  "files": [
    "dist",
    "assets"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@babel/runtime": "^7.9.2",
    "@sinoui/theme": "^1.0.0-beta.8",
    "classnames": "^2.2.6",
    "react-textarea-autosize": "^7.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "babel-loader": "^8.1.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest-styled-components": "^7.0.1",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-test-renderer": "^16.13.1",
    "styled-components": "^5.1.0",
    "ts-lib-tools": "^0.11.3",
    "typescript": "^3.8.3"
  }
}
